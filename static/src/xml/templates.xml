<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="Calendrier_des_absences">
        <div class="cbn">
            <h2 style="font-size:1.5em;padding:0;margin:0" id="titre"></h2>
            <form2 style="padding-top:0.5em;padding-bottom:0.5em">
                <table>
                    <tr>
                        <td style="width:110px;border-top:none;border-left:none;border-right:none;border-bottom:none;">
                            Service (Partiel)<br /><input style='width:10em' type='text' id='service' />
                        </td>
                        <td style="width:110px;border-top:none;border-left:none;border-right:none;border-bottom:none;">
                            Poste (Partiel)<br /><input style='width:10em' type='text' id='poste' />
                        </td>
                        <td style="width:110px;border-top:none;border-left:none;border-right:none;border-bottom:none;">
                            Nom (Partiel)<br /><input style='width:8em' type='text' id='nom' />
                        </td>
                        <td style="width:110px;border-top:none;border-left:none;border-right:none;border-bottom:none;">
                            N+1 (Partiel)<br /><input style='width:8em' type='text' id='n1' />
                        </td>
                        <td style="width:110px;border-top:none;border-left:none;border-right:none;border-bottom:none;">
                            N+2 (Partiel)<br /><input style='width:8em' type='text' id='n2' />
                        </td>
                        <td style="width:110px;border-top:none;border-left:none;border-right:none;border-bottom:none;">
                            Date Debut<br /><input style='width:8em' type='text' id='date_debut' />
                        </td>
                        <td style="width:110px;border-top:none;border-left:none;border-right:none;border-bottom:none;">Nb Jours<br /><select style="width: 4em;" id='nb_jours'>
                            <option value="7">7</option>
                            <option value="14">14</option>
                            <option value="21">21</option>
                            <option value="28">28</option>
                            <option value="35">35</option>
                            <option value="42">42</option>
                            <option value="49">49</option>
                            <option value="56">56</option>
                        </select> </td>
                        <td style="width:110px;display: none;border-top:none;border-left:none;border-right:none;border-bottom:none;">Start Date<br /><input style='width:4em' type='text' id='start_date' /></td>
                        <td style="width:110px;display: none;border-top:none;border-left:none;border-right:none;border-bottom:none;">End Date<br /><input style='width:4em' type='text' id='end_date' /></td>
                        <td style="width:110px;display: none;border-top:none;border-left:none;border-right:none;border-bottom:none;">Back Forward Days<br /><input style='width:4em' type='text' id='back_forward_days' /></td>
                        <td style="border-top:none;border-left:none;border-right:none;border-bottom:none;"><br /><button>OK</button><input id="validation" type="hidden" value="ko" /></td>
                    </tr>
                </table>
            </form2>
            <div id="Calendrier_analysecbn" />
        </div>
    </t>
</templates>
